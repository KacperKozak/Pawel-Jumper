{
  "version": "1.0.1",
  "name": "pawel-jumper",
  "displayName": "Pawel Jumper",
  "publisher": "code-cooking",
  "description": "A minimal VS Code extension template.",
  "icon": "logo/logo.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KacperKozak/Pawel-Jumper"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Pawel Jumper",
      "properties": {
        "pawel-jumper.maxJumpDistance": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Maximum number of lines to jump within a block before splitting into internal stops."
        }
      }
    },
    "commands": [
      {
        "command": "pawel-jumper.hop-up",
        "title": "Pawel Jumper: Hop Up"
      },
      {
        "command": "pawel-jumper.hop-down",
        "title": "Pawel Jumper: Hop Down"
      },
      {
        "command": "pawel-jumper.select-up",
        "title": "Pawel Jumper: Select Up to Previous Blank Line"
      },
      {
        "command": "pawel-jumper.select-down",
        "title": "Pawel Jumper: Select Down to Next Blank Line"
      }
    ],
    "keybindings": [
      {
        "command": "pawel-jumper.hop-up",
        "mac": "cmd+ctrl+up",
        "win": "ctrl+alt+PageUp",
        "linux": "ctrl+alt+PageUp",
        "when": "editorTextFocus"
      },
      {
        "command": "pawel-jumper.hop-down",
        "mac": "cmd+ctrl+down",
        "win": "ctrl+alt+PageDown",
        "linux": "ctrl+alt+PageDown",
        "when": "editorTextFocus"
      },
      {
        "command": "pawel-jumper.select-up",
        "mac": "shift+cmd+ctrl+up",
        "win": "shift+ctrl+alt+PageUp",
        "linux": "shift+ctrl+alt+PageUp",
        "when": "editorTextFocus"
      },
      {
        "command": "pawel-jumper.select-down",
        "mac": "shift+cmd+ctrl+down",
        "win": "shift+ctrl+alt+PageDown",
        "linux": "shift+ctrl+alt+PageDown",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "start": "bun run compile && bun run vscode",
    "vscode": "code --new-window --extensionDevelopmentPath=\"$PWD\" --user-data-dir=\"$PWD/.vscode-pawel-jumper-dev\" --extensions-dir=\"$PWD/.vscode-pawel-jumper-extensions\"",
    "compile": "bun x tsc -p ./",
    "watch": "bun x tsc -watch -p ./",
    "lint": "oxlint --fix",
    "format": "prettier --write .",
    "ts": "bun x tsc --noEmit",
    "test": "bun test ./src/lib/ ./src/utils/",
    "test:e2e": "node ./out/test/runTest.js",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20",
    "@types/vscode": "^1.79.0",
    "@vscode/test-electron": "^2.3.2",
    "dedent": "^1.6.0",
    "glob": "^8.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "mocha": "^10.2.0",
    "oxlint": "^1.13.0",
    "prettier": "^3.6.2",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "oxlint --fix",
      "bash -lc 'bun run ts'"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "bun@1.2.19"
}
